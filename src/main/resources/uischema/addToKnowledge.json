{
  "connectorName": "ai",
  "operationName": "addToKnowledge",
  "title": "Ingest documents to the vector store",
  "help": "This operation allows you to ingest documents into a vector store by parsing, splitting, and generating embeddings for the input data.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Connection",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "vectorStoreConfigKey",
              "displayName": "Vector store Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "MI_VECTOR_STORE",
                "CHROMA_DB",
                "PINECONE",
                "POSTGRE_SQL"
              ],
              "defaultType": "connection.local",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Select the vector store connection to store and retrieve embeddings."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "embeddingConfigKey",
              "displayName": "Embedding model Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "OPEN_AI"
              ],
              "defaultType": "connection.local",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Choose the AI service connection for generating embeddings."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Basic",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "input",
              "displayName": "Input",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Provide the input data to be processed."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Parse",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "needParse",
              "displayName": "Parse",
              "inputType": "checkbox",
              "defaultValue": true,
              "required": "true",
              "helpTip": "Enable this option if the input needs to be parsed into text."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "parseType",
              "displayName": "Type",
              "inputType": "combo",
              "comboValues": [
                "pdf-to-text",
                "markdown-to-text",
                "html-to-text",
                "doc-to-text",
                "docx-to-text",
                "xls-to-text",
                "xlsx-to-text",
                "ppt-to-text",
                "pptx-to-text"
              ],
              "defaultValue": "pdf-to-text",
              "required": "true",
              "helpTip": "Select the format of the input content to parse it correctly.",
              "enableCondition": [
                {
                  "needParse": true
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Split",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "needSplit",
              "displayName": "Split",
              "inputType": "checkbox",
              "defaultValue": true,
              "required": "true",
              "helpTip": "Enable this option if the input needs to be split into smaller segments."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "splitStrategy",
              "displayName": "Strategy",
              "inputType": "combo",
              "comboValues": [
                "Recursive",
                "ByParagraph",
                "BySentence"
              ],
              "defaultValue": "Recursive",
              "required": "true",
              "helpTip": "Choose the strategy for splitting the input into segments.",
              "enableCondition": [
                {
                  "needSplit": true
                }
              ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "maxSegmentSize",
              "displayName": "Max segment size",
              "inputType": "stringOrExpression",
              "defaultValue": "1000",
              "required": "false",
              "helpTip": "Specify the maximum size (in tokens) for each segment.",
              "enableCondition": [
                {
                  "needSplit": true
                }
              ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "maxOverlapSize",
              "displayName": "Max overlap size",
              "inputType": "stringOrExpression",
              "defaultValue": "200",
              "required": "false",
              "helpTip": "Specify the maximum overlap size (in tokens) between segments.",
              "enableCondition": [
                {
                  "needSplit": true
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Embedding",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "needEmbedding",
              "displayName": "Generate Embedding",
              "inputType": "checkbox",
              "defaultValue": true,
              "required": "true",
              "helpTip": "Enable this option to generate embeddings for the input."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "embeddingModel",
              "displayName": "Embedding model",
              "inputType": "combo",
              "comboValues": [
                "text-embedding-3-small",
                "text-embedding-3-small",
                "text-embedding-ada-002"
              ],
              "defaultValue": "text-embedding-3-small",
              "required": "true",
              "helpTip": "Select the embedding model to generate vector representations.",
              "enableCondition": [
                {
                  "needEmbedding": true
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Output",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Output Variable Name",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "deriveResponseVariable": true,
              "helpTip": "Name of the variable to which the output of the operation should be assigned"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "checkbox",
              "defaultValue": "false",
              "helpTip": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable).",
              "required": "false"
            }
          }
        ]
      }
    }
  ]
}
